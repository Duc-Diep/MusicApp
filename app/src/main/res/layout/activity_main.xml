<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_start_service"
        android:text="Play"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_stop_service"
        android:text="Stop"
        android:layout_centerInParent="true"
        android:layout_below="@id/btn_start_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/layout_playing"
        android:visibility="gone"
        android:paddingHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/teal_200"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/img_song"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/mayu"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <LinearLayout
            android:id="@+id/layout_title"
            android:layout_toRightOf="@id/img_song"
            android:layout_toLeftOf="@id/btn_previous"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:text="Song name"
                android:textSize="15dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_single"
                android:text="Single name"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/btn_close"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/close"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <ImageView
            android:id="@+id/btn_next"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/next"
            android:layout_toLeftOf="@id/btn_close"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <ImageView
            android:id="@+id/btn_play_or_pause"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/pause"
            android:layout_toLeftOf="@id/btn_next"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <ImageView
            android:id="@+id/btn_previous"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/previous"
            android:layout_toLeftOf="@id/btn_play_or_pause"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
    </RelativeLayout>

</RelativeLayout>