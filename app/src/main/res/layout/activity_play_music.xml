<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activities.PlayMusicActivity">

    <RelativeLayout
        android:id="@+id/layout_title_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/tv_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/btn_back"
            android:maxLines="1"
            android:text="Song name"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_song_name"
            android:layout_toRightOf="@id/btn_back"
            android:maxLines="1"
            android:text="miku"
            android:textColor="@color/white" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_avt"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="125dp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_title_music">

        <ImageView
            android:id="@+id/img_music"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/mayu" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/layout_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@id/cv_avt"
        tools:layout_editor_absoluteX="0dp">

        <SeekBar
            android:id="@+id/seekbar_handle"
            style="@style/Base.Widget.AppCompat.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:theme="@style/SeekBar" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekbar_handle"
            android:layout_marginLeft="10dp"
            android:text="0:00"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekbar_handle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="0:00"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_handle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/layout_progress"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/btn_like"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_handle_previous"
            android:background="@null"
            android:src="@drawable/ic_baseline_shuffle_24"></ImageButton>

        <ImageButton
            android:id="@+id/btn_handle_previous"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_handle_play_or_pause"
            android:background="@null"
            android:src="@drawable/ic_baseline_skip_previous_24"></ImageButton>

        <ImageButton
            android:id="@+id/btn_handle_play_or_pause"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@null"
            android:src="@drawable/ic_baseline_pause_circle_outline_24"></ImageButton>
        <ImageButton
            android:id="@+id/btn_handle_next"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btn_handle_play_or_pause"
            android:background="@null"
            android:src="@drawable/ic_baseline_skip_next_24"></ImageButton>
        <ImageButton
            android:id="@+id/btn_handle_repeat_one"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btn_handle_next"
            android:background="@null"
            android:src="@drawable/ic_baseline_repeat_one_24"></ImageButton>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>