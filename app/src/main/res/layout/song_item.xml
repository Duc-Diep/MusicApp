<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingHorizontal="15dp"
    android:paddingTop="15dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_img_song_item"
        app:cardCornerRadius="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/img_song_item"
            android:scaleType="fitXY"
            android:src="@drawable/music_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/card_img_song_item"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/tv_song_item_name"
            android:layout_width="match_parent"
            android:text="Key of Truth"
            android:gravity="bottom"
            android:textStyle="bold"
            android:maxLines="1"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:textSize="20dp"
            android:layout_height="0dp"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/tv_song_item_artist"
            android:text="Sweet Arm"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_height="0dp"
            android:layout_weight="5"/>
    </LinearLayout>

</RelativeLayout>