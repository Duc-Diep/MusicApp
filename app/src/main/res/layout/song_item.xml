<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingHorizontal="10dp"
    android:layout_marginBottom="5dp"
    android:layout_height="70dp">
    <ImageView
        android:id="@+id/img_song_item"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/mayu"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/tv_song_item_name"
        android:layout_toRightOf="@id/img_song_item"
        android:layout_marginTop="15dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingLeft="10dp"
        android:text="Key of Truth"
        android:textSize="18dp"
        android:layout_toLeftOf="@id/btn_play_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_song_item_artist"
        android:layout_toRightOf="@id/img_song_item"
        android:layout_below="@id/tv_song_item_name"
        android:text="Anime"
        android:textSize="14dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/btn_play_item"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:padding="7dp"
        android:src="@drawable/play"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
</RelativeLayout>